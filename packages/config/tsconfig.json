{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [ "ESNext" ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "exclude": ["../../libs/**/*.test.*"]
}