{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [ "ESNext" ],
    "module": "NodeNext",
    "rootDir": "src/",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
  }
}